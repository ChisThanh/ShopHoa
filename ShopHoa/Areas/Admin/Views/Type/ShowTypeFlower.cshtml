@model IEnumerable<ShopHoa.Models.Type>
@{
    ViewBag.Title = "ShowTypeFlower";
    Layout = "~/Areas/Admin/Views/Shared/Master.cshtml";
}
@{
    var t = 1;
}
<h2 class="text-center text-primary">DANH SÁCH THỂ LOẠI HOA</h2>
<div style="">
    <p class="btn btn-primary bg-white">
        @Html.ActionLink("Create New", "CreateType")
    </p>
    <p class="text-danger">
        @TempData["DeleteError"]
    </p>
</div>

<div class="content table-responsive table-full-width">
    <table class="table">
        <thead>
            <tr>
                <th class="text-center">#</th>
                <th>
                    @Html.DisplayNameFor(model => model.IdType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NameType)
                </th>
                <th class="text-right">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@t</td>
                    <td>@item.IdType</td>
                    <td>@item.NameType</td>
                    <td class="td-actions text-right">

                        <a href="/Admin/Type/EditType?id=@item.IdType" rel="tooltip" title="" class="btn btn-success btn-simple btn-xs" data-original-title="Edit Profile">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="/Admin/Type/DeleteType?id=@item.IdType" rel="tooltip" title="" class="btn btn-danger btn-simple btn-xs" data-original-title="Remove">
                            <i class="fa fa-times"></i>
                        </a>
                    </td>
                </tr>
                t++;
            }
        </tbody>
    </table>
</div>

